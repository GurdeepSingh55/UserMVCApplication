<h3>Users</h3>
<p><a asp-action="CreateUser" class="btn btn-primary">Add User</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>State</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr id="row-@u.Id">
                <td>@u.Id</td>
                <td>@u.Name</td>
                <td>@u.Address.FullAddress</td>
                <td>@u.Address.State.Name</td>
                <td>@u.CreatedAt.Value.ToShortDateString()</td>
                <td>@u.UpdatedAt.Value.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/Home/CreateUser?userId=@u.Id" class="btn btn-warning btn-sm">Edit</a>
                    <button type="button" class="btn btn-danger btn-sm" onclick="DeleteUser(@u.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/custom/users-list.js"></script>